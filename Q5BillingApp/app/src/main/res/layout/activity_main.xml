<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_secondary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bread Size Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Bread Size"
            android:textSize="18sp"
            android:paddingTop="10dp"/>

        <RadioGroup
            android:id="@+id/breadSizeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio15cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 cm (₹100)"/>

            <RadioButton
                android:id="@+id/radio30cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 cm (₹200)"/>
        </RadioGroup>

        <!-- Toppings Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Toppings"
            android:textSize="18sp"
            android:paddingTop="10dp"/>

        <CheckBox
            android:id="@+id/paneerCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paneer (₹50)"/>

        <CheckBox
            android:id="@+id/mushroomCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushroom (₹50)"/>

        <CheckBox
            android:id="@+id/onionCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onion (₹30)"/>

        <CheckBox
            android:id="@+id/jalapenoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalapeno (₹30)"/>

        <!-- Drink Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Drink"
            android:textSize="18sp"
            android:paddingTop="10dp"/>

        <AutoCompleteTextView
            android:id="@+id/drinkAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type to select drink"
            android:minHeight="48dp" />

        <!-- Order Button -->
        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>